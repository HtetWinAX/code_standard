<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_view_tree_inherit" model="ir.ui.view">
        <field name="name">account.account.tree</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="old_code" />
            </xpath>
        </field>
    </record>

    <record id="account_view_form_inherit" model="ir.ui.view">
        <field name="name">account.account.form</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('row')]" position="after">
                <div class="col col-md-auto">
                    <label for="code" string="Old Code"/>
                    <div>
                        <field name="old_code" placeholder="e.g. 101000" class="oe_inline"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    
</odoo>